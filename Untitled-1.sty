import numpy as np
import matplotlib.pyplot as plt

def funcion_lineal(x):
    return -2 * x + 240

x_vals = np.linspace(50, 150, 100)
y_vals = funcion_lineal(x_vals)

plt.figure(figsize=(8, 6))
plt.plot(x_vals, y_vals, label="f(x) = -2x + 240", color='blue')
plt.scatter([80, 100, 120], [80, funcion_lineal(100), funcion_lineal(120)], color='red')
plt.axhline(0, color='black', linewidth=0.5)
plt.axvline(0, color='black', linewidth=0.5)
plt.grid(True, linestyle='--', alpha=0.7)
plt.xlabel("x")
plt.ylabel("f(x)")
plt.legend()
plt.title("Gráfica de la Función Lineal")
plt.show()
