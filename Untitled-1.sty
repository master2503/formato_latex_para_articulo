import numpy as np
import matplotlib.pyplot as plt

def funcion_lineal(x):
    return -2 * x + 240

x_vals = np.linspace(50, 150, 100)
y_vals = funcion_lineal(x_vals)

plt.plot(x_vals, y_vals, label="f(x) = -2x + 240")
